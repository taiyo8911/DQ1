# キャラクター
レベル20 = {
    ちから:92,
    すばやさ:88,
    HP:138,
    MP:128,
}

# 各種計算
キャラクター攻撃力 = ちから + ロトの剣(40)
キャラクター守備力 = すばやさ/2 + ロトの鎧(28) + 水鏡の盾(20)
ベホイミ回復量 = 85 + (0~15)
ベホイミ消費MP = 10


# モンスター
りゅうおう第2 = {
    攻撃力:140,
    守備力:200,
    HP:130,
}


# ダメージ計算
ダメージ = ((自分の攻撃力-相手の守備力/2)/2)*(0.5～1)
炎のダメージ = 65 + (0~7) * 2/3(ロトの鎧)



